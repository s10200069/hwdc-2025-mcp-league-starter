# Docker Compose Environment Configuration
# Copy this file to .env and customize for your needs
#
# Quick start:
#   cp .env.docker.example .env.docker
#   docker compose up -d

# =============================================================================
# External Port Configuration
# =============================================================================
# Port to access the application from your host machine
# Default: 8080 (http://localhost:8080)
EXTERNAL_PORT=8080

# =============================================================================
# Application Environment
# =============================================================================
# Options: development, production, staging, test
ENVIRONMENT=development

# =============================================================================
# Backend Configuration
# =============================================================================
# Internal backend port (don't change unless you know what you're doing)
BACKEND_PORT=8000

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# CORS Configuration
# =============================================================================
# Allowed origins for CORS (comma-separated)
# Development: Use the external port
# Production: Use your actual domain(s)
#
# Examples:
# CORS_ALLOWED_ORIGINS=http://localhost:8080
# CORS_ALLOWED_ORIGINS=https://your-app.run.app,https://www.your-domain.com
# CORS_ALLOWED_ORIGINS=http://localhost:9090,https://example.com
CORS_ALLOWED_ORIGINS=http://localhost:8080

# =============================================================================
# OpenAI API Key (Required)
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
# Replace with your actual API key
OPENAI_API_KEY=""

# =============================================================================
# MCP (Model Context Protocol) Configuration
# =============================================================================
ENABLE_MCP_SYSTEM=true
MCP_TIMEOUT_SECONDS=60

# MCP Server Authentication (REQUIRED for peer-to-peer communication)
# This token is used to authenticate requests to the /mcp endpoint
# Replace with your actual token
MCP_SERVER_AUTH_TOKEN=""

# Run the backend as an MCP server (handles /mcp requests)
AS_A_MCP_SERVER=false