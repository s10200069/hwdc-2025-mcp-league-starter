{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "{BASE_PATH}"
      ],
      "env": {},
      "timeout_seconds": 60,
      "enabled": true,
      "description": "Filesystem browsing tools"
    },
    "Context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp@latest"
      ],
      "env": {},
      "timeout_seconds": 60,
      "enabled": true,
      "description": "Context7 documentation tools"
    },
    "ms365": {
      "command": "npx",
      "args": [
        "-y",
        "@softeria/ms-365-mcp-server"
      ],
      "env": {},
      "timeout_seconds": 300,
      "enabled": true,
      "description": "Microsoft 365 services integration (personal mode)"
    }
  }
}
