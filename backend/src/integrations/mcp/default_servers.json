{
  "mcpServers": {
    "filesystem": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "{BASE_PATH}"
      ],
      "env": {},
      "timeout_seconds": 60,
      "enabled": true,
      "description": "Filesystem browsing tools"
    },
    "Context7": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp@latest"
      ],
      "env": {},
      "timeout_seconds": 60,
      "enabled": true,
      "description": "Context7 documentation tools"
    },
    "ms365": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@softeria/ms-365-mcp-server"
      ],
      "env": {},
      "timeout_seconds": 300,
      "enabled": true,
      "description": "Microsoft 365 services integration (personal mode)"
    },
    "_example_http_server": {
      "type": "http",
      "url": "https://api.example.com/mcp",
      "auth": {
        "type": "bearer",
        "token": "your-api-token-here"
      },
      "timeout_seconds": 60,
      "enabled": false,
      "description": "Example HTTP MCP server (disabled by default)"
    },
    "_example_http_no_auth": {
      "type": "http",
      "url": "http://localhost:8000/mcp",
      "timeout_seconds": 30,
      "enabled": false,
      "description": "Example local HTTP MCP server without authentication"
    }
  }
}
