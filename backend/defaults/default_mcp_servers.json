{
  "mcpServers": {
    "filesystem": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "{BASE_PATH}"
      ],
      "env": {},
      "timeout_seconds": 60,
      "enabled": true,
      "description": "Filesystem browsing tools"
    },
    "ms365": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@softeria/ms-365-mcp-server"
      ],
      "env": {},
      "timeout_seconds": 300,
      "enabled": true,
      "description": "Microsoft 365 services integration (personal mode)"
    },
    "word-document-server": {
      "type": "stdio",
      "command": "uvx",
      "args": ["--from", "office-word-mcp-server", "word_mcp_server"],
      "env": {},
      "timeout_seconds": 60,
      "enabled": false,
      "description": "Microsoft Word document analysis tools"
    },
    "ppt": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--from", "office-powerpoint-mcp-server", "ppt_mcp_server"
      ],
      "env": {},
      "timeout_seconds": 60,
      "enabled": false,
      "description": "Microsoft PowerPoint presentation analysis tools"
    },
    "Context7": {
      "type": "http",
      "url": "https://mcp.context7.com/mcp",
      "timeout_seconds": 60,
      "enabled": false,
      "description": "Context7 documentation "
    },
    "_example_http_server": {
      "type": "http",
      "url": "https://api.example.com/mcp",
      "auth": {
        "type": "bearer",
        "token": "your-api-token-here"
      },
      "timeout_seconds": 60,
      "enabled": false,
      "description": "Example HTTP MCP server (disabled by default)"
    }
  }
}
