{
  "name": "hwdc-2025-mcp-league-starter",
  "version": "1.0.0",
  "description": "HWDC 2025「Hello World」工作坊範例：MCP 大聯盟全端樣板",
  "private": true,
  "scripts": {
    "dev": "concurrently \"cd backend && uv run dev\" \"pnpm --filter frontend dev\"",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "cd backend && uv run dev",
    "build": "cd backend && uv build && pnpm --filter frontend build",
    "build:frontend": "pnpm --filter frontend build",
    "build:backend": "cd backend && uv build",
    "test": "cd backend && uv run pytest && pnpm --filter frontend test",
    "test:frontend": "pnpm --filter frontend test",
    "test:backend": "cd backend && uv run pytest",
    "lint": "cd backend && uv run ruff check . && pnpm --filter frontend lint",
    "lint:frontend": "pnpm --filter frontend lint",
    "lint:backend": "cd backend && uv run ruff check .",
    "type-check": "cd backend && uv run mypy . && pnpm --filter frontend type-check",
    "type-check:frontend": "pnpm --filter frontend type-check",
    "type-check:backend": "cd backend && uv run mypy .",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:build": "docker compose build"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.0",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "semantic-release": "^24.0.0"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@10.14.0",
  "keywords": [
    "hwdc",
    "hello-world",
    "mcp",
    "fullstack",
    "fastapi",
    "nextjs",
    "docker",
    "railway"
  ],
  "author": "",
  "license": "Apache-2.0"
}
